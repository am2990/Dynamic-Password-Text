<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_type_selection"
    tools:context="com.example.wordpassword.activity.TypeSelectionActivity">


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radio_select"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_syn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/syn"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_ant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ant"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/radio_sim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sim"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <Button
        android:id="@+id/next_button"
        android:layout_below="@+id/radio_select"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/Next"
        android:onClick="nextActivity" />


</RelativeLayout>
